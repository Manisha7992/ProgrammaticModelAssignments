<apex:page standardController="Account" extensions="BookingPageController">
  <apex:form >
  <!--Booking details page  -->
    <apex:pageBlock title="BookingDetails" mode="edit">   
      <apex:pageBlockSection title="My Booking Section" columns="2">
        <apex:inputField value="{!account.name}"/>
        <apex:inputField value="{!account.Phone}"/>
        <apex:inputField value="{!account.BillingStreet}"/>
        <apex:inputField value="{!account.EmailAddress__c}"/>       
      </apex:pageBlockSection>
      <apex:pageBlockButtons >
        <apex:commandButton value="save" action="{!click}"/>
      </apex:pageBlockButtons>
    </apex:pageBlock>
  </apex:form>
</apex:page>